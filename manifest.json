{
    "manifest_version": 2,
    "name": "nyaPass",
    "version": "0.1.0",
    "description": "Your plain old password, in a better way",
    "homepage_url": "https://github.com/de4db1ff/nyaPass",

    "permissions": [
        "tabs",
        "clipboardWrite"
    ],

    "background": {
        "page": "background.html",
        "persistent": false
    },

    "browser_action": {
        "default_title": "Get password for this site",
        "default_popup": "popup.html"
    }
}
