{
    "manifest_version": 3,
    "name": "nyaPass",
    "version": "0.1.0",
    "description": "Your passwordless passwords",
    "homepage_url": "https://github.com/de4db1ff/nyaPass",

    "permissions": [
        "activeTab"
    ],

    "host_permissions": [ "*://nya.Pass/*" ],

    "background": {
        "service_worker": "background.js",
        "type": "module"
    },


    "action": {
        "default_title": "Get password for this tab",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "96": "icons/icon96.png",
            "128": "icons/icon128.png"
          }
    },

    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; default-src 'self'"
    },

    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+C",
                "mac": "MacCtrl+C"
            }
        }
    },

    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "96": "icons/icon96.png",
        "128": "icons/icon128.png"
      }
      
}
